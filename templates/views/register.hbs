{{>adminheader loginuser=loginuser  patientdata=patientdata  docData=docData admin=admin}}
{{>adminsidebaar loginuser=loginuser}}

   <div class="main-panel">
        <div class="content-wrapper">

   <div class="main-panel">
        <div class="content-wrapper">
            <div class="account-center">
                <div class="account-box">
                    <form action="/register" class="form-signin" method="POST">
                        <div class="account-logo">
                            <a href="#"><img src="./img/logo-dark.png" alt=""></a>
                        </div>

                         {{#each errors}}
                        <div class="alert alert-danger" id="alert" role="alert">
                             <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            {{text}}
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" value="{{username}}" required>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" class="form-control" name="email" value="{{email}}" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" value="{{password}}" required>
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="text" class="form-control" name="phone" value="{{phone}}" required>
                        </div>
                       
                        <div class="form-group text-center">
                            <button class="btn btn-primary account-btn" type="submit">Signup</button>
                        </div>
                     
                    </form>
                </div>
            </div> 
        </div>
    </div>
   {{>adminfooter}}