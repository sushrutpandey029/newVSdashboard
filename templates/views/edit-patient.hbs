{{>adminheader loginuser=loginuser  patientdata=patientdata  docData=docData admin=admin}}
{{>adminsidebaar loginuser=loginuser}}
        <div class="page-wrapper">
        <div class="main-panel">
             <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Edit Patient</h4>
                    </div>
                </div>
                <div class="row">
                    {{#each userData}}
                    <div class="col-lg-8 offset-lg-2">
                        <form action="/edit-patient/{{this._id}}" method="POST">
                          {{#each errors}}
                            <div class="alert alert-danger">
                              <a href="#" class ="close" data-dismiss="alert" aria-label="close">&times;</a>
                              {{text}}    
                            </div>
                            {{/each}}
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Patient Full Name <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name="patientFullName" value="{{this.patientFullName}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Doc id</label>
                                        <input class="form-control" type="text" name="docid" value="{{this.DocId}}" required>
                                    </div>
                                </div>
                                <!-- <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Doctor Email Id: <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name="demail" value="{{demail}}" >
                                    </div>
                                </div> -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email <span class="text-danger">*</span></label>
                                        <input class="form-control" type="email" name="email" value="{{this.email}}" required>
                                    </div>
                                </div>
                               <div class="col-sm-12">
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												<label>Address</label>
												<input type="text" class="form-control" name="address" value="{{this.address}}" required>
											</div>
										</div>
                                      
									</div>
								</div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Phone </label>
                                        <input class="form-control" type="number" name="phone" value="{{this.phone}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Age </label>
                                        <input class="form-control" type="number" name="age" value="{{this.age}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>native Lanaguage </label>
                                        <input class="form-control" type="text" name="nativeLanaguage" value="{{this.nativeLanaguage}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>disabality Type </label>
                                        <input class="form-control" type="text" name="disabalityType" value="{{this.disabalityType}}" required>
                                    </div>
                                </div>
                              
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary account-btn" type="submit">Update Patient</button>
                            </div>
                        </form>
                    </div>
                    {{/each}}
                </div>
            </div>
			
        </div>
    </div>
   {{>adminfooter}}