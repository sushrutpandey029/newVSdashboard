
{{>adminheader loginuser=loginuser  patientdata=patientdata  docData=docData admin=admin}}
    <link rel="stylesheet" type="text/css" href="../css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
{{>adminsidebaar loginuser=loginuser}}

     <div class="page-wrapper">
             <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Patients</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="add-patient" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Patient</a>
                    </div>
                </div>
				<div class="row" style="margin-left: 0px; margin-right:300px;width:100%">
					<div class="col-md-12">
						<div class="table-responsive">
							<table class="table table-border table-striped custom-table datatable mb-0">
								<thead>
									<tr>
										<th>Name</th>
										<th>DocId</th>
										{{!-- <th>Age</th> --}}
										<th>Phone</th>
										<th>Email</th>
                                        <th>Profile</th>
										<th class="text-right">Action</th>
									</tr>
								</thead>
								<tbody>
									   {{#each userData}}
									<tr>
										<td><a  href="user_detailprofile/{{this._id}}"><img width="28" height="28" src="img/user.jpg" class="rounded-circle m-r-5" alt="">{{this.patientFullName}}</a></td>
										 <td><a  href="doc_maindashboard/{{this.DocId}}">{{this.DocId}}</a></td>
										{{!-- <td>{{this.age}}</td> --}}
										<td>{{this.phone}}</td>
										<td>{{this.email}}</td>
                                         <td class="font-weight-medium"><form action="../patients-profile/{{this._id}}">
                                              <button type="submit" class="">Dashboard</button>
                                                    </form></td>
										<td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="./edit-patient/{{this._id}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
													<a class="dropdown-item" href="./changepsd-patient/{{this._id}}"><i class="fa fa-pencil m-r-5"></i>ChangePassword</a>
													<a class="dropdown-item" href="/delete-patient/{{this._id}}" data-toggle="modal"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                     {{!-- <a class="dropdown-item" href="./patients-profile/{{this._id}}" data-toggle="modal"><i class="fa fa-eye-o m-r-5"></i>profile</a> --}}
												</div>
											</div>
										</td>
									</tr> 
									   {{/each}}
								</tbody>
							</table>
						</div>
					</div>
                </div>
                <br><br>

            


            </div>
            
        </div>
		
    </div>
     


{{>adminfooter}}
    <script src="../js/app.js"></script>
  
			
