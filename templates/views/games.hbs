{{>adminheader loginuser=loginuser  patientdata=patientdata  docData=docData admin=admin}}
<link rel="stylesheet" type="text/css" href="../css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">


{{>adminsidebaar loginuser=loginuser}}
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Games</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/add-game" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add game</a>
                    </div> 
                </div>
				<div class="row doctor-grid">
                    {{#each userData}}
                    <div class="col-md-4 col-sm-4  col-lg-3">
                        <div class="profile-widget">
                            <div class="doctor-img">
                                <a class="avatar" href="#"><img alt="" src="{{this.gameimage}}"></a> 
                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="../edit-game/{{this._id}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="../delete-game/{{this._id}}" data-toggle="modal"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis"><a href="#">{{this.gamename}}</a></h4>
                            <div class="doc-prof">Action</div>
                            <div class="user-country">
                                <i class=""></i> {{this.gamecategories}}, {{this.gametype}}
                            </div>
                        </div>
                    </div>
                    {{/each}}

                    
                </div>
				<div class="row">
                    <div class="col-sm-12">
                        <div class="see-all">
                            <a class="see-all-btn" href="javascript:void(0);">Load More</a>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
		<div id="delete_doctor" class="modal fade delete-modal" role="dialog">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-body text-center">
						<img src="img/sent.png" alt="" width="50" height="46">
						<h3>Are you sure you want to delete this Doctor?</h3>
						<div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                            <form action="">
							<button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        </div>
					</div>
				</div>
			</div>
		</div>
    </div>


{{>adminfooter}}